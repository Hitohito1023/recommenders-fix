<ol class="post-comments">
<% @post_comments.each do |post_comment| %>
	<li>
		<%= link_to user_path(post_comment.user) do %>
      <%= attachment_image_tag post_comment.user, :profile_image, size:'50x50', fallback: "no_image_icon.jpg" %>
      <%= post_comment.user.name.truncate(16) %>
    <% end %>
    [<%= post_comment.created_at.strftime('%Y/%m/%d') %>]<br>
    <%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <div align="right">
        <%= link_to "削除", post_item_post_comment_path(post_comment.post_item, post_comment), method: :delete, remote: true, class: "btn-danger" %>
      </div>
    <% end %>
  </li>
<% end %>
</ol>

