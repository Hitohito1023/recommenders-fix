              <li><%= link_to '全ての投稿', post_items_path %></li>
              <% genres = Genre.all %>
              <% genres.each do |genre| %>
              <li>・<%= link_to genre.name, post_items_path(genre_id: genre.id) %></li>
              <% end %>
            </ul>
          </li>
          <li><i class="fas fa-users"></i><%= link_to 'ユーザー', users_path %></li>
          <li><i class="fas fa-user-plus"></i><%= link_to '新規登録', new_user_registration_path %></li>
          <li><i class="fas fa-sign-in-alt"></i><%= link_to 'ログイン', new_user_session_path %></li>
        </ul>
      </nav>
<%# スマホ用のメニュー %>

      <div id="sp-menu">
